<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_account"
    android:background="@drawable/bg_switch_gray_stroke_r6"
    android:layout_height="99dp">

    <ImageView
        android:id="@+id/iv_select"
        android:src="@drawable/ic_svg_left_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:text=""
        android:textColor="#ff222222"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:text="@string/text_ntrip_name_tip"
        android:textColor="#ff999999"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_connect"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_white_fill_stroke_r3"
        android:gravity="center"
        android:text="@string/ntrip_connect"
        android:textColor="#ff222222"
        android:textSize="18sp" />

</RelativeLayout>