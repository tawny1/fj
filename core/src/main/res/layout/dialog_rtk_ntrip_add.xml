<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/text_add_ntrip_account"
                    android:textColor="#ff222222"
                    android:textSize="27sp" />

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:paddingStart="@dimen/dp_4"

                    android:paddingEnd="@dimen/dp_4"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:text="@string/cancel"
                    android:textColor="#ff999999"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:text="@string/text_ntrip_save"
                    android:textColor="#ff999999"
                    android:textSize="24sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="180dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/bg_6_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="@string/text_ntrip_company_name_tip"
                        android:textColor="#ff333333"
                        android:textSize="21sp" />

                    <EditText
                        android:id="@+id/et_company_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="@string/text_input_company_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="21sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_6_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="@string/ntrip_layout_host"
                        android:textColor="#ff333333"
                        android:textSize="21sp" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="@string/text_input"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="21sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_6_white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="24dp"
                            android:text="@string/ntrip_layout_port"
                            android:textColor="#ff333333"
                            android:textSize="21sp" />

                        <EditText
                            android:id="@+id/et_port"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="24dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="end"
                            android:hint="@string/text_input"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/color_333333"
                            android:textSize="21sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_source_list"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_marginStart="17dp"
                        android:background="@drawable/bg_switch_gradient_dark_fill_r6_2"
                        android:paddingStart="27dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="12dp"
                        android:text="@string/ntrip_layout_get_source"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_6_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="@string/ntrip_layout_source_node"
                        android:textColor="#ff333333"
                        android:textSize="21sp" />

                    <com.fj.gnss.view.widget.NoNavSpinner
                        android:id="@+id/et_source_node"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end"
                        android:textColor="@color/color_333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="21sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_6_white">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="@string/ntrip_layout_account"
                        android:textColor="#ff333333"
                        android:textSize="21sp" />

                    <EditText
                        android:id="@+id/et_account_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="@string/text_input"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="21sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_6_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:text="@string/ntrip_layout_password"
                        android:textColor="#ff333333"
                        android:textSize="21sp" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="@string/text_input"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="21sp" />

                    <ImageView
                        android:id="@+id/iv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="24dp"
                        android:src="@mipmap/ic_pwd_hide"
                        android:visibility="gone" />
                    <!--                        android:src="@mipmap/ic_pwd_hide"-->
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_connect"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_switch_gradient_dark_fill_r6_2"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="@string/ntrip_connect"
                        android:textColor="@color/color_text_connect"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/layout_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_delete"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gray_stroke_r6_2"
                            android:gravity="center"
                            android:text="@string/delete"
                            android:textColor="#999999"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_confirm"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gradient_dark_fill_r3_2"
                            android:gravity="center"
                            android:text="@string/ntrip_connect"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</layout>