<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.example.myapplication.widget.WheelView
        android:id="@+id/main_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <Button
        android:id="@+id/main_show_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show WheelView in Dialog!" />


    <com.example.myapplication.widget.ProgressRing
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        app:pr_bg_end_color="#00ffffff"
        app:pr_bg_mid_color="#CCCCCC"
        app:pr_bg_start_color="#00ffffff"
        app:pr_progress="70"
        app:pr_progress_end_color="#F78930"
        app:pr_progress_start_color="#00ffffff"
        app:pr_progress_width="40dp" />
</LinearLayout>